<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
  <%= devise_error_messages! %>

  <div>
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, required: true %>
  </div>

  <div>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, required: true %>
  </div>

  <div>
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, required: true %>
  </div>

  <div>
    <%= f.label :age %><br />
    <%= f.number_field :age %>
  </div>

  <div>
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>

  <div>
    <%= f.label :profile_photo %><br />
    <%= f.file_field :profile_photo %>
  </div>

  <div>
    <%= f.label :email %><br />
    <%= f.email_field :email, required: true %>
  </div>

  <div>
    <%= f.label :password %> <i>(6 characters minimum)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", required: true %>
  </div>

  <div>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", required: true %>
  </div>

  <div>
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
